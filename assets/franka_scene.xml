<mujoco model="franka_minimal">
  <!-- Simplified Franka scene with table and cubes -->
  
  <compiler angle="radian" autolimits="true"/>
  <option gravity="0 0 -9.81" integrator="implicitfast"/>
  
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" 
             rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"/>
  </asset>
  
  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <!-- Camera -->
    <camera name="overhead" pos="1.1 0 0.9" euler="0 45 0" fovy="100"/>
    
    <!-- Table -->
    <body name="table" pos="0.5 0 0.4" euler="0 0 1.5708">
      <geom type="box" size="0.4 0.55 0.02" rgba="0.6 0.4 0.2 1"/>
    </body>
    
    <!-- Red cube -->
    <body name="cube_pick" pos="0.7 -0.1 0.45">
      <freejoint/>
      <geom type="box" size="0.03 0.03 0.03" rgba="1 0 0 1" mass="0.1"/>
    </body>
    
    <!-- Blue cube -->
    <body name="cube_A" pos="0.7 0.1 0.45">
      <freejoint/>
      <geom type="box" size="0.03 0.03 0.03" rgba="0 0 1 1" mass="0.1"/>
    </body>
    
    <!-- Franka robot (simplified 7-DOF arm) -->
    <body name="robot_base" pos="0.15 0 0.42">
      <geom type="box" size="0.05 0.05 0.05" rgba="0.9 0.9 0.9 1"/>
      
      <body name="link1" pos="0 0 0.1">
        <joint name="joint1" type="hinge" axis="0 0 1" range="-2.8973 2.8973" damping="1"/>
        <geom type="capsule" size="0.04" fromto="0 0 0 0 0 0.2" rgba="0.7 0.7 0.7 1"/>
        
        <body name="link2" pos="0 0 0.2">
          <joint name="joint2" type="hinge" axis="0 1 0" range="-1.7628 1.7628" damping="1"/>
          <geom type="capsule" size="0.04" fromto="0 0 0 0 0 0.2" rgba="0.7 0.7 0.7 1"/>
          
          <body name="link3" pos="0 0 0.2">
            <joint name="joint3" type="hinge" axis="0 0 1" range="-2.8973 2.8973" damping="1"/>
            <geom type="capsule" size="0.035" fromto="0 0 0 0 0 0.15" rgba="0.7 0.7 0.7 1"/>
            
            <body name="link4" pos="0 0 0.15">
              <joint name="joint4" type="hinge" axis="0 1 0" range="-3.0718 -0.0698" damping="1"/>
              <geom type="capsule" size="0.035" fromto="0 0 0 0 0 0.15" rgba="0.7 0.7 0.7 1"/>
              
              <body name="link5" pos="0 0 0.15">
                <joint name="joint5" type="hinge" axis="0 0 1" range="-2.8973 2.8973" damping="1"/>
                <geom type="capsule" size="0.03" fromto="0 0 0 0 0 0.1" rgba="0.7 0.7 0.7 1"/>
                
                <body name="link6" pos="0 0 0.1">
                  <joint name="joint6" type="hinge" axis="0 1 0" range="-0.0175 3.7525" damping="1"/>
                  <geom type="capsule" size="0.03" fromto="0 0 0 0 0 0.08" rgba="0.7 0.7 0.7 1"/>
                  
                  <body name="link7" pos="0 0 0.08">
                    <joint name="joint7" type="hinge" axis="0 0 1" range="-2.8973 2.8973" damping="1"/>
                    <geom type="capsule" size="0.025" fromto="0 0 0 0 0 0.05" rgba="0.7 0.7 0.7 1"/>
                    
                    <!-- End-effector (hand) -->
                    <body name="hand" pos="0 0 0.05">
                      <geom type="box" size="0.03 0.03 0.02" rgba="0.3 0.3 0.3 1"/>
                    </body>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  
  <actuator>
    <!-- Position control for 7 arm joints -->
    <position name="act1" joint="joint1" kp="4500"/>
    <position name="act2" joint="joint2" kp="4500"/>
    <position name="act3" joint="joint3" kp="3500"/>
    <position name="act4" joint="joint4" kp="3500"/>
    <position name="act5" joint="joint5" kp="2000"/>
    <position name="act6" joint="joint6" kp="2000"/>
    <position name="act7" joint="joint7" kp="2000"/>
    
    <!-- Gripper control (simplified - just a single actuator) -->
    <general name="gripper" joint="joint7" ctrlrange="0 255" gainprm="10 0 0"/>
  </actuator>
  
  <keyframe>
    <key name="home" qpos="0 0 0 -1.57079 0 1.57079 -0.7853 0.04 0.04" 
         ctrl="0 0 0 -1.57079 0 1.57079 -0.7853 255"/>
  </keyframe>
</mujoco>